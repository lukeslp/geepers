  "requirements": {
    "python": ">=3.8",
    "packages": [
      "python-dotenv>=1.0.0",
      "pyyaml>=6.0.0",
      "aiohttp>=3.9.0"
    ]
  },
  "optionalDependencies": {
    "anthropic": "anthropic>=0.18.0"
  },
  "configurationSchema": {
    "type": "object",
    "properties": {
      "output_dir": {
        "type": "string",
        "description": "Base directory for geepers output",
        "default": "~/geepers"
      },
      "anthropic_api_key": {
        "type": "string",
        "description": "Anthropic API key for model calls",
        "secret": true
      },
      "default_model": {
        "type": "string",
        "description": "Default model tier",
        "default": "sonnet",
        "enum": ["haiku", "sonnet", "opus"]
      },
      "hub_enabled": {
        "type": "boolean",
        "description": "Connect to shared/mcp hub for extended capabilities",
        "default": false
      },
      "hub_url": {
        "type": "string",
        "description": "Hub URL when enabled",
        "default": "http://localhost:5060"
      },
      "log_level": {
        "type": "string",
        "description": "Logging level",
        "default": "INFO",
        "enum": ["DEBUG", "INFO", "WARNING", "ERROR"]
      }
    }
  }
}
